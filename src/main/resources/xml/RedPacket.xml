<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.RedPacketMapper">
    <select id="getRedPacket" resultType="com.pojo.RedPacket">
        select *
        from t_red_packet
        where id = #{id}
    </select>

    <update id="decreaseRedPacket">
        update t_red_packet
        set stock = stock - 1, version = version + 1
        where id = #{id} and version = #{version}
    </update>

    <select id="getAll" resultType="com.pojo.UserRedPacket">
        select * from t_user_red_packet
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">and id=#{id}</if>
            <if test="redPacketId != null">and red_packet_id=#{redPacketId}</if>
        </trim>
    </select>

    <update id="update">
        update t_user_red_packet
        <trim prefix="set" suffixOverrides=",">
            <if test="note != null">note=#{note},</if>
            <if test="amount != null">amount=#{amount}</if>
        </trim>
    </update>

    <insert id="insert">
        insert into t_user_red_packet
                <foreach collection="cc" item="cc" index="x" open="(" separator="," close=")">

                </foreach>
    </insert>
</mapper>